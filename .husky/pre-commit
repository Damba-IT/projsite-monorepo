#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run formatting on staged files
echo "ğŸ” Checking code formatting..."
bun run lint-staged

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only)

# Check if any staged files are in apps or packages
if echo "$STAGED_FILES" | grep -qE "^(apps|packages)/"; then
  echo "ğŸ” Checking if build works for affected packages..."
  echo "ğŸ“¦ Building packages and their dependents..."
  # Actually run the build
  bun run turbo build --filter=[HEAD^1] || (
    echo "âŒ Build failed! Please fix the build issues before committing."
    exit 1
  )
fi
